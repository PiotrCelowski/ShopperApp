<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/shoppingListDetailsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="88dp"
            tools:layout_editor_absoluteY="0dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addGroceryItemFloatingButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="32dp"
            android:clickable="true"
            android:contentDescription="@string/add_grocery_button"
            app:backgroundTint="#1AD121"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/baseline_add_black_48" />

        <EditText
            android:id="@+id/textInput"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:hint="@string/text_input_default"
            android:inputType="text"
            android:textColorHighlight="#1AD121"
            android:textColorLink="#1AD121"
            app:layout_constraintBottom_toBottomOf="@+id/addGroceryItemFloatingButton"
            app:layout_constraintStart_toEndOf="@+id/addGroceryItemFloatingButton"
            app:layout_constraintTop_toTopOf="@+id/addGroceryItemFloatingButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>